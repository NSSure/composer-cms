@page "{postRoute}"
@model ComposerCMS.Web.Models.System.BlogSystem.PostModel
@{
    ViewData["Title"] = "Post";
}

<div class="jumbotron">
    <div class="container">
        <h1 class="display-4">@this.Model.Post.Title</h1>
        <p class="lead">This is going to be some sort of sub header you can set for the post.</p>
        <p>Posted on @this.Model.Post.DateAdded</p>
    </div>
</div>
<div class="container">
    <div class="card">
        <div class="card-body">
            <div class="post">
                <div class="post-contents">
                    @Html.Raw(this.Model.Post.Content)
                </div>
            </div>
        </div>
    </div>
</div>